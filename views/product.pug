extends layout 

block content
  section(class="delete-container")
    section(class="delete-modal")
      p Are you sure you want to delete this product?
      section(class="buttons")
        button(class="yes-btn") Yes
        button(class="no-btn") No
  section(class="container")
    h3 #{product.name}
    p(class="product-description") #{product.description}
    p Price: #{product.price}
    p Amount in stock: #{product.number_in_stock}
    p Category: #{product.category[0].name}
    p 
      img(src=product.image class="product-image")
    button(class="btn btn-primary") 
        a(href="/products/edit/" + product._id) Edit Product
    button(class="delete-btn btn btn-danger") Delete Product
  script(src="../javascripts/delete_product.js") 